<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="DEBUG">
      <AppenderRef ref="Console"/>
    </Root>
    
    
    <Logger name="me.best3.auto.graph.index.LuceneIndexFactory" level="INFO">
    	<AppenderRef ref="Console"/>
    </Logger>
    <Logger name="me.best3.auto.graph.index.FileIndexer" level="INFO">
    	<AppenderRef ref="Console"/>
    </Logger>
    <Logger name="me.best3.auto.graph.index.LuceneDocumentIndex" level="INFO">
    	<AppenderRef ref="Console"/>
    </Logger>
    <Logger name="me.best3.auto.graph.index.Document" level="INFO">
    	<AppenderRef ref="Console"/>
    </Logger>
    <Logger name="me.best3.auto.graph.index.LuceneIndex" level="INFO">
    	<AppenderRef ref="Console"/>
    </Logger>
     <Logger name="me.best3.auto.graph.index.LuceneKVIndex" level="INFO">
    	<AppenderRef ref="Console"/>
    </Logger>
	<Logger name="me.best3.auto.graph.analyzer.SubsetComparator" level="INFO">
    	<AppenderRef ref="Console"/>
    </Logger> 
    
    
  </Loggers>
</Configuration>